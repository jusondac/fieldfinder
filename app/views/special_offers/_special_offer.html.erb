<div id="<%= dom_id special_offer %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= special_offer.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= special_offer.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Discount percentage:</strong>
    <%= special_offer.discount_percentage %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= special_offer.start_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">End date:</strong>
    <%= special_offer.end_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Facility:</strong>
    <%= special_offer.facility_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Min hours:</strong>
    <%= special_offer.min_hours %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Code:</strong>
    <%= special_offer.code %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Is active:</strong>
    <%= special_offer.is_active? ? "Yes" : "No" %>
  </div>
</div>
