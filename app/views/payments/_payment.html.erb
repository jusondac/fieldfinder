<div id="<%= dom_id payment %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Booking:</strong>
    <%= payment.booking_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= payment.amount %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Payment method:</strong>
    <%= payment.payment_method %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Transaction:</strong>
    <%= payment.transaction_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= payment.status %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Payment date:</strong>
    <%= payment.payment_date %>
  </div>
</div>
