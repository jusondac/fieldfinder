<%= form_with(model: membership_plan, class: "contents") do |form| %>
  <% if membership_plan.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(membership_plan.errors.count, "error") %> prohibited this membership_plan from being saved:</h2>

      <ul class="list-disc ml-6">
        <% membership_plan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": membership_plan.errors[:name].none?, "border-red-400 focus:outline-red-600": membership_plan.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": membership_plan.errors[:description].none?, "border-red-400 focus:outline-red-600": membership_plan.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :duration_months %>
    <%= form.number_field :duration_months, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": membership_plan.errors[:duration_months].none?, "border-red-400 focus:outline-red-600": membership_plan.errors[:duration_months].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :price %>
    <%= form.text_field :price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": membership_plan.errors[:price].none?, "border-red-400 focus:outline-red-600": membership_plan.errors[:price].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :discount_percentage %>
    <%= form.text_field :discount_percentage, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": membership_plan.errors[:discount_percentage].none?, "border-red-400 focus:outline-red-600": membership_plan.errors[:discount_percentage].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :max_bookings_per_month %>
    <%= form.number_field :max_bookings_per_month, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": membership_plan.errors[:max_bookings_per_month].none?, "border-red-400 focus:outline-red-600": membership_plan.errors[:max_bookings_per_month].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :is_active %>
    <%= form.checkbox :is_active, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": membership_plan.errors[:is_active].none?, "border-red-400 focus:outline-red-600": membership_plan.errors[:is_active].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
